@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="register-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" id="email">
            <span asp-validation-for="Email" style="color:red"></span>

            <label asp-for="Password" ></label>
            <input asp-for="Password" type="password" id="password">
            <span asp-validation-for="Password" style="color:red"></span>

            <button type="submit">Login</button>
            <span style="color:red">@Html.ValidationMessage("LoginFailed")</span>
            <a class="btn align-content-lg-center border-primary" asp-action="Register">Dont have an account?</a>
        </form>
    </div>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
        }

        input {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px;
            background-color: #5cb85c;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #4cae4c;
            }

    </style>
</body>
</html>
